extends ../base.pug

block content
  h3 Books

  a(href="/books/add", class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Add book

  each book in books
    .media
      a(href=`/books/${book.id}`)
        .media-body
          h4= book.title
          p= book.author

  if !books.length
    p No books found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) More